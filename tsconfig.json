{
  "compilerOptions": {
        "target": "es6"
      , "module"          : "commonjs"
      , "outDir"          : "dist"
      , "traceResolution" : false
      , "noLib"           : false
      , "declaration"     : true
      , "declarationMap"  : true
      , "sourceMap"       : true
      , "skipLibCheck"    : true
      , "esModuleInterop" : true
      , "resolveJsonModule": true
  
      , "emitDecoratorMetadata"  : true
      , "experimentalDecorators" : true
  
      , "lib": [
        "esnext", "es2015"
      ]
  
      , "strict"                     : true
      , "noEmitOnError"              : false
      , "noUnusedLocals"             : true
      , "noImplicitReturns"          : true
      , "noFallthroughCasesInSwitch" : true
      , "strictNullChecks"           : true
      , "noImplicitAny"              : true
      , "noUnusedParameters"         : true
      , "noImplicitThis"             : true
  }
  , "exclude": [
      "node_modules/"
    , "dist/"
  ]
  , "include": [
       "src/**/*.ts"
  ]
}